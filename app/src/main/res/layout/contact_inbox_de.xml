<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.AfterContactInboxDe">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/LLFormDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="10sp"
                android:orientation="vertical"
                android:padding="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Consumer Details"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvRefNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey_dark"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:gravity="end" />

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/contactConsumer"
                    android:textSize="16sp"
                    android:layout_marginTop="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/contacts"
                    android:textSize="16sp"
                    android:textStyle="italic" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:background="@drawable/border_layout"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/green"
                        android:text="Contact Name:  " />

                    <TextView
                        android:id="@+id/tvFName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="140dp"
                        android:textColor="@color/green"
                        android:layout_height="wrap_content"
                        android:text="Consumer Address: " />

                    <TextView
                        android:id="@+id/tvBAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="140dp"
                        android:textColor="@color/green"
                        android:layout_height="wrap_content"
                        android:text="Telephone: "/>

                    <TextView
                        android:id="@+id/tvTel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="140dp"
                        android:textColor="@color/green"
                        android:layout_height="wrap_content"
                        android:text="Mobile: "/>

                    <TextView
                        android:id="@+id/tvMobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="140dp"
                        android:textColor="@color/green"
                        android:layout_height="wrap_content"
                        android:text="Email: "/>

                    <TextView
                        android:id="@+id/tvCEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginBottom="10sp"
                    android:layout_weight=".5"
                    android:gravity="left|center"
                    android:text="Title"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="@color/grey_light" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deadline :   "
                        android:textColor="@color/grey_txt" />

                    <TextView
                        android:id="@+id/tvDeadDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12/11/2019 "
                        android:textColor="@color/light_black" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tvDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="20sp"
                    android:textColor="@color/light_black" />


                <TextView
                    android:visibility="gone"
                    android:id="@+id/tvForm"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    android:text="Enquiry Attachment Form Details"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:padding="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginLeft="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="10sp"
                android:id="@+id/recyclerview"/>




            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="3dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="3dp"
                card_view:cardMaxElevation="3dp"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="10">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:background="@color/grey_medium">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="30sp"
                            android:id="@+id/tv1"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="5sp"
                            android:text="My Quote"
                            android:textStyle="bold"
                            android:layout_marginRight="200dp"
                            android:background="@color/grey_medium"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/ivDocument"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:layout_marginTop="5sp"
                            android:layout_alignParentRight="true"
                            android:layout_toRightOf="@+id/tv1"
                            android:src="@mipmap/download" />

                    </RelativeLayout>



                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:background="@color/grey_light" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="140sp"
                                android:layout_height="35sp"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="10sp"
                                android:text="Subject    :"
                                android:textColor="@color/splash_color"
                                android:textSize="16sp"
                                android:textStyle="bold" />


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvSubject"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Name"
                                android:textColor="@color/black"
                                android:textSize="18sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="140sp"
                                android:layout_height="35sp"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="10sp"
                                android:text="Price    :"
                                android:textColor="@color/splash_color"
                                android:textSize="16sp"
                                android:textStyle="bold" />


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="Price"
                                android:textColor="@color/black"
                                android:textSize="18sp" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="140sp"
                                android:layout_height="35sp"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="10sp"
                                android:text="Username    :"
                                android:textColor="@color/splash_color"
                                android:textSize="16sp"
                                android:textStyle="bold" />


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvB_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Name"
                                android:textColor="@color/black"
                                android:textSize="18sp" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="140sp"
                                android:layout_height="35sp"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="10sp"
                                android:text="Description  :"
                                android:textColor="@color/splash_color"
                                android:textSize="16sp"
                                android:textStyle="bold" />


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvDiscription"
                                android:layout_width="wrap_content"
                                android:layout_height="35sp"
                                android:layout_below="@+id/tvPrice"
                                android:layout_alignParentRight="true"
                                android:text="Description"
                                android:textColor="@color/black"
                                android:textSize="16sp" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="140sp"
                                android:layout_height="35sp"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="10sp"
                                android:text="This Quote is :"
                                android:textColor="@color/splash_color"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvPriceDesc"
                                android:layout_width="wrap_content"
                                android:layout_height="35sp"
                                android:layout_alignParentRight="true"
                                android:text="Fixed Price"
                                android:textColor="@color/black"
                                android:textSize="16sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="140sp"
                                android:layout_height="35sp"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="10sp"
                                android:text="Occurance Rate :"
                                android:textColor="@color/splash_color"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvRate"
                                android:layout_width="wrap_content"
                                android:layout_height="35sp"
                                android:layout_alignParentRight="true"
                                android:text="One time payment"
                                android:textColor="@color/black"
                                android:textSize="16sp" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="140sp"
                                android:layout_height="35sp"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="10sp"
                                android:text="Ready To Start :"
                                android:textColor="@color/splash_color"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvReady"
                                android:layout_width="wrap_content"
                                android:layout_height="35sp"
                                android:layout_alignParentRight="true"
                                android:text="Immediately"
                                android:textColor="@color/black"
                                android:textSize="16sp" />


                        </LinearLayout>


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvDate"
                            android:layout_width="wrap_content"
                            android:layout_height="40sp"
                            android:layout_below="@+id/tvPrice"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10sp"
                            android:text="Name"
                            android:textColor="@color/splash_color"
                            android:textSize="16sp"
                            android:visibility="gone" />

                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>





            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_Feedback"
                android:layout_width="180sp"
                android:layout_height="40sp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginRight="10sp"
                android:layout_marginTop="20sp"
                android:background="@drawable/blue_button"
                android:text="Leave  Feedback"
                android:visibility="gone"
                android:textColor="@color/white" />


        </LinearLayout>

    </ScrollView>


</LinearLayout>