<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.post_new_enquiry">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/ivCancel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_weight="0.40"
                android:padding="@dimen/_15sdp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/cancel_gry" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/post_enquiry"
                    android:gravity="center_horizontal"
                    android:textColor="@color/splash_color"
                    android:textSize="@dimen/_16ssp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/get_quotes"
                    android:gravity="center_horizontal"
                    android:paddingBottom="@dimen/_2sdp"
                    android:textColor="@color/grey_txt"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivattach"
                android:layout_width="match_parent"
                android:layout_weight="0.45"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/_8sdp"
                android:background="@drawable/ic_attach_file_grey_24dp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#c2c2c2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="#f5f5f5"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10sp"
                android:text="Your Name:"
                android:textColor="@color/grey_txt"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10sp"
                android:background="@null"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:textSize="15sp"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:textColor="@color/black" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:visibility="gone"
            android:background="#c2c2c2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:visibility="gone"
            android:background="#f5f5f5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10sp"
                android:text="Your Email:"
                android:textColor="@color/grey_txt"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10sp"
                android:background="@null"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:textSize="15sp"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:textColor="@color/black" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="@dimen/_1sdp"
            android:background="#c2c2c2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:visibility="gone"
            android:background="#f5f5f5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10sp"
                android:text="Confirm Email:"
                android:textColor="@color/grey_txt"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etEmailConf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:background="@null"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:textSize="15sp"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:textColor="@color/black" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="@dimen/_1sdp"
            android:background="#c2c2c2" />

        <FrameLayout
            android:id="@+id/flCategory"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:spinnerMode="dropdown"
                style="@style/SpinnerTheme"
                android:paddingLeft="-5dp"
                android:textColor="@color/grey_txt" />


        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#c2c2c2" />

        <FrameLayout
            android:id="@+id/flServices"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:spinnerMode="dropdown"
                style="@style/SpinnerTheme"
                android:layout_marginLeft="-5sp"
                android:textColor="@color/grey_txt" />

            <TextView
                android:id="@+id/tvView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="9sp"
                android:text="@string/service"
                android:gravity="center|left"
                android:textColor="@color/grey_txt"
                android:textSize="16sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                android:background="@color/green"
                android:visibility="gone" />

        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#c2c2c2" />


        <RelativeLayout
            android:id="@+id/LLDeadLine"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10sp"
                android:text="@string/deadline"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:textColor="@color/grey_txt"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:layout_marginLeft="100sp"
                android:textSize="15sp"
                android:layout_marginTop="15sp"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:textColor="@color/black" />


            <ImageView
                android:id="@+id/ivDeadQues"
                android:layout_gravity="end"
                android:layout_width="25dp"
                android:layout_alignParentEnd="true"
                android:layout_height="25dp"
                android:layout_margin="5dp"
                android:padding="3dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/ques_deadline"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#c2c2c2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10sp"
                android:text="@string/subject"
                android:textColor="@color/grey_txt"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etSubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10sp"
                android:background="@null"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:textSize="15sp"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:textColor="@color/black" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#c2c2c2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etMsg"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10sp"
                android:background="@null"
                android:gravity="top|left"
                android:hint="@string/msg_desc"
                android:textSize="15sp"
                android:inputType="textMultiLine"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:textColor="@color/black" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#c2c2c2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10sp"
                android:text="@string/your_location"
                android:textColor="@color/grey_txt"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10sp"
                android:background="@null"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:textSize="15sp"
                android:fontFamily="sans-serif-thin"
                android:imeOptions="actionNext"
                android:textStyle="bold"
                android:textColor="@color/black" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#c2c2c2" />


        <FrameLayout
            android:id="@+id/flCountry"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCountry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="20sp"
                android:ellipsize="end"
                android:gravity="left"
                android:hint="@string/choose_country"
                android:maxLines="1"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="3dp"
                android:textColor="@color/grey_txt"
                android:textColorHint="@color/grey_txt"
                android:textSize="16sp" />


            <ImageView
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:layout_gravity="right|center"
                android:layout_marginRight="5dp"
                android:scaleType="fitXY"
                style="@style/SpinnerTheme" />

        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#c2c2c2" />

        <FrameLayout
            android:id="@+id/flState"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_margin="10sp"
                android:hint="@string/choose_state"
                android:maxLines="1"
                android:gravity="left"
                android:ellipsize="end"
                android:layout_marginRight="20sp"
                android:textColorHint="@color/grey_txt"
                android:paddingBottom="3dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:textSize="16sp"
                android:textColor="@color/grey_txt"/>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:layout_gravity="right|center"
                android:layout_marginRight="5dp"
                android:scaleType="fitXY"
                style="@style/SpinnerTheme"/>

        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#c2c2c2" />

        <FrameLayout
            android:id="@+id/flCity"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_margin="10sp"
                android:hint="@string/choose_city"
                android:maxLines="1"
                android:gravity="left"
                android:ellipsize="end"
                android:layout_marginRight="20sp"
                android:textColorHint="@color/grey_txt"
                android:paddingBottom="3dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:textSize="16sp"
                android:textColor="@color/grey_txt" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:layout_gravity="right|center"
                android:layout_marginRight="5dp"
                android:scaleType="fitXY"
                style="@style/SpinnerTheme"/>

        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#c2c2c2" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_margin="@dimen/_20sdp"
            android:background="@drawable/button_background"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="@string/post_enquiry"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

</ScrollView>